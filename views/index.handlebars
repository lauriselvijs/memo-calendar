<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/memos" method="POST" class="mb-4">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control" />
  </div>
  <div class="form-group">
    <label for="memo">Memo</label>
    <input type="text" name="memo" class="form-control" />
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    <input type="text" name="location" class="form-control" />
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    <input type="date" name="date" class="form-control" />
  </div>
  <div class="form-group">
    <label for="time">Time</label>
    <input type="time" name="time" class="form-control" />
  </div>
  <input type="submit" value="Add Memo" class="btn btn-primary btn-block" />
</form>

<h4 id="demo">Memos</h4>
<ul class="list-group list-group-flush mb-3">
  {{#each memos}}
    <li class="list-group-item" id="{{this.id}}">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-10 col-sm-6">
            {{this.name}}
            <br />
            {{this.memo}}
            <br />
            {{this.location}},
            {{this.date}},
            {{this.time}}
          </div>
          <div class="col-lg-2 col-sm-6">
            <button type="button" class="btn btn-primary m-2">Edit</button>
            <button
              id="delete-button"
              type="button"
              class="btn btn-danger"
              onClick="onDelete({{this.id}})"
            >Delete</button>
          </div>
        </div>
      </div>
    </li>
  {{/each}}
</ul>

<script>
  function onDelete(id){ document.getElementById(id).remove(); }

</script>